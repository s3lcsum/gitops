# Master key used by Zitadel (must be at least 32 characters)
ZITADEL_MASTERKEY=your-32-character-or-longer-master-key-here

# Database admin (must already exist in Postgres stack)
ZITADEL_DATABASE_POSTGRES_ADMIN_PASSWORD=your-postgres-admin-password-here

# App DB user (created by init if not exists)
ZITADEL_DATABASE_POSTGRES_USER_PASSWORD=your-zitadel-db-user-password-here

# Organization configuration (sensitive)
ZITADEL_FIRSTINSTANCE_ORG_HUMAN_PASSWORD=your-secure-admin-password-here

# SMTP configuration (sensitive)
ZITADEL_DEFAULTINSTANCE_SMTPCONFIGURATION_SMTP_HOST=smtp.example.com:587
ZITADEL_DEFAULTINSTANCE_SMTPCONFIGURATION_SMTP_USER=mailer@example.com
ZITADEL_DEFAULTINSTANCE_SMTPCONFIGURATION_SMTP_PASSWORD=your-smtp-password-here
ZITADEL_DEFAULTINSTANCE_SMTPCONFIGURATION_TLS=true
ZITADEL_DEFAULTINSTANCE_SMTPCONFIGURATION_FROM=mailer@example.com
ZITADEL_DEFAULTINSTANCE_SMTPCONFIGURATION_FROMNAME=Your Service Name
