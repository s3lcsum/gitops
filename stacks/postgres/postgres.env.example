# PostgreSQL Admin Credentials
PGDATA=/var/lib/postgresql/data/pgdata

POSTGRES_DB=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Postgres Exporter integration
DATA_SOURCE_NAME=postgresql://postgres:your-postgres-password-here@postgres:5432/postgres?sslmode=disable

# Application Database Credentials
# Pattern: DBINIT_<SERVICE>_<FIELD> where FIELD is USER, PASSWORD, or NAME
# The script will automatically discover all services and create databases

# N8N Database
DBINIT_N8N_USER=n8n_user
DBINIT_N8N_PASSWORD=n8n_password
DBINIT_N8N_NAME=n8n_db

# Netbox Database
DBINIT_NETBOX_USER=netbox_user
DBINIT_NETBOX_PASSWORD=netbox_password
DBINIT_NETBOX_NAME=netbox_db

# Authentik Database
DBINIT_AUTHENTIK_USER=authentik_user
DBINIT_AUTHENTIK_PASSWORD=authentik_password
DBINIT_AUTHENTIK_NAME=authentik_db

# RReading-Glasses Database
DBINIT_RREADING_GLASSES_USER=rreading_glasses_user
DBINIT_RREADING_GLASSES_PASSWORD=rreading_glasses_password
DBINIT_RREADING_GLASSES_NAME=rreading_glasses_db

# Uptime Kuma Database
DBINIT_UPTIME_KUMA_USER=uptime_kuma_user
DBINIT_UPTIME_KUMA_PASSWORD=uptime_kuma_password
DBINIT_UPTIME_KUMA_NAME=uptime_kuma_db

# WatchYourLAN Database
DBINIT_WATCHYOURLAN_USER=watchyourlan_user
DBINIT_WATCHYOURLAN_PASSWORD=watchyourlan_password
DBINIT_WATCHYOURLAN_NAME=watchyourlan_db

# Warrtracker Database
DBINIT_WARRTRACKER_USER=warrtracker_user
